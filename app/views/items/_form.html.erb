<%= form_for @item, html: { class: 'form-horizontal' } do |f| %>

    <div class="form-group">
      <%= f.label :name %></br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit '.submit',action: @item.new_record? ? 'Создать' : 'Изменить' %>
    </div>
<% end %>


